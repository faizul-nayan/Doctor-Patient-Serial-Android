<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAsh"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorIcons"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fullNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name *"
            android:textColorHint="@color/colorAsh"
            android:inputType="textPersonName"
            android:textColor="@color/colorAsh"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/fatherSpousNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father/Spouse Name *"
            android:textColorHint="@color/colorAsh"
            android:textColor="@color/colorAsh"
            android:inputType="textPersonName"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/patientAddressEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColorHint="@color/colorAsh"
            android:textColor="@color/colorAsh"
            android:inputType="textMultiLine|textPostalAddress"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/patientPhoneNumberEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number *"
            android:textColor="@color/colorAsh"
            android:textColorHint="@color/colorAsh"
            android:inputType="phone"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/patientEmailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/colorAsh"
            android:textColor="@color/colorAsh"
            android:inputType="textEmailAddress"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/patientAgeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age *"
            android:textColor="@color/colorAsh"
            android:textColorHint="@color/colorAsh"
            android:inputType="numberSigned"
            android:layout_margin="10dp" />



            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <RadioButton
                    android:id="@+id/maleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:gravity="center"
                    android:checked="true"
                    android:textColor="@color/colorAsh"/>
                <RadioButton
                    android:id="@+id/femaleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:checked="false"
                    android:gravity="center"
                    android:textColor="@color/colorAsh"/>

            </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="Blood Group"
                android:textColor="@color/colorAsh"/>
            <Spinner
                android:id="@+id/patientBloodGroupSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorAsh"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>